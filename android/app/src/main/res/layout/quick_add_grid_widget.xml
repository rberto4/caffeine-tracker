<?xml version="1.0" encoding="utf-8"?>
<!-- Quick Add Grid Widget - Design moderno come nell'app -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Beverage 1 (Top-Left) - Purple/Violet -->
        <FrameLayout
            android:id="@+id/beverage_card_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/gradient_purple"
            android:clickable="true">

            <!-- Background watermark image -->
            <ImageView
                android:id="@+id/beverage_image_bg_0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="-20dp"
                android:alpha="0.2"
                android:rotation="15"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Top section with icon -->
                <ImageView
                    android:id="@+id/beverage_image_0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Bottom section with name and caffeine -->
                <TextView
                    android:id="@+id/beverage_grid_name_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Espresso"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp" />

                <!-- Caffeine pill and add button -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/beverage_grid_caffeine_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="95mg"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/pill_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                    <!-- Add button -->
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_add_circle">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="+"
                            android:textSize="24sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                    </FrameLayout>

                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- Beverage 2 (Top-Right) - Blue -->
        <FrameLayout
            android:id="@+id/beverage_card_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/gradient_blue"
            android:clickable="true">

            <!-- Background watermark image -->
            <ImageView
                android:id="@+id/beverage_image_bg_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="-20dp"
                android:alpha="0.2"
                android:rotation="15"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/beverage_image_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/beverage_grid_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/beverage_grid_caffeine_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="95mg"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/pill_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_add_circle">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="+"
                            android:textSize="24sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                    </FrameLayout>

                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Beverage 3 (Bottom-Left) - Orange/Red -->
        <FrameLayout
